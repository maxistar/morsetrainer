<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:key="preferences" >
   <PreferenceCategory 
        android:title="What to learn">
        <CheckBoxPreference  
			android:key="learn_latinica"  
			android:title="Latinic Letters"  
			android:summary="learn latinic letters" 
			android:defaultValue="true" />
        <CheckBoxPreference  
			android:key="learn_numbers"  
			android:title="Numbers"  
			android:summary="learn numbers" 
			android:defaultValue="true" />
        <CheckBoxPreference  
			android:key="learn_punctuation_signs"  
			android:title="Punctuation Signs"  
			android:summary="learn punctuation signs" 
			android:defaultValue="true" />
        <CheckBoxPreference  
			android:key="learn_cyrilics"  
			android:title="Cyrilic Letters"  
			android:summary="learn cyrilic letters" 
			android:defaultValue="false" />        
    </PreferenceCategory> 
    <PreferenceCategory 
        android:title="About">
        <Preference 
            android:key="version_name"
            android:summary=""
            android:title="Version" />
        <com.maxistar.morsetrainer.AboutBox
			android:title="About Morse Teacher"  
			android:summary="just shortly about the application"
			android:dialogTitle="About" /> 
        </PreferenceCategory>
</PreferenceScreen>